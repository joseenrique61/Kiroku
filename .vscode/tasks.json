{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Laravel Dev Server",
            "type": "shell",
            "command": "composer run dev",
            "isBackground": true,
            "problemMatcher": {
                "owner": "php",
                "pattern": {
                    "regexp": "^\\[(.*?)\\] \\[PHP (.*?)\\]: (.*?) in (.*?) on line (\\d+)$",
                    "file": 4,
                    "line": 5,
                    "message": 3,
                    "severity": 2,
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*APP_URL: http.*$",
                    "endsPattern": "^.*APP_URL: http.*$"
                }
            }
        }
    ]
}